\mode<presentation>

\definecolor{pucdarkblue}{RGB}{30,123,224}
\definecolor{puclightblue}{RGB}{209,219,247}
\definecolor{pucgray}{RGB}{140,147,152}
\definecolor{pucdarkgray}{RGB}{82,100,115}
\definecolor{pucred}{RGB}{224,34,30}
\definecolor{pucyellow}{RGB}{254,217,0}
\definecolor{pucdarkyellow}{RGB}{248,216,66}

\setbeamercolor*{palette primary}{fg=white,bg=pucdarkblue}
\setbeamercolor*{palette secondary}{fg=white,bg=pucdarkyellow}
\setbeamercolor*{palette tertiary}{fg=white,bg=pucred}
\setbeamercolor*{palette quaternary}{fg=white,bg=pucdarkgray}

\setbeamercolor{title}{fg=pucdarkblue,bg=}
\setbeamercolor{subtitle}{fg=pucdarkgray,bg=}
\setbeamercolor*{titlelike}{bg=}
\setbeamercolor*{frametitle}{bg=white,fg=pucdarkblue}
\setbeamercolor*{part title}{bg=black,fg=black}
\setbeamercolor*{heading}{fg=pucyellow, bg=}
\setbeamercolor*{title page header}{parent=palette tertiary}

\setbeamercolor{section in toc}{fg=pucdarkblue}
\setbeamercolor{subsection in toc}{fg=pucdarkgray}

\setbeamercolor*{footer}{fg=pucdarkblue}

\setbeamercolor*{separation line}{}
\setbeamercolor*{fine separation line}{}

\setbeamercolor*{pages}{fg=pucdarkgray,bg=}
\setbeamercolor*{normal text}{fg=pucdarkgray}

%blocks
\setbeamertemplate{blocks}[rounded][shadow=true]
\setbeamercolor{block title}{fg=white,bg=pucdarkblue}
\setbeamercolor{block body}{fg=pucdarkgray,bg=pucgray!10}



\setbeamercolor{block title alerted}{fg=white,bg=pucred}
\setbeamercolor{block body alerted}{fg=pucdarkgray,bg=pucgray!10}

\setbeamercolor{block title example}{fg=white,bg=pucyellow}
\setbeamercolor{block body example}{fg=pucdarkgray,bg=pucgray!10}

\setbeamercolor{alerted text}{fg=pucred}

\setbeamertemplate{itemize item}[circle]
\setbeamertemplate{itemize subitem}[circle]
\setbeamertemplate{itemize subsubitem}[circle]

\setbeamercolor*{item}{fg=pucdarkgray}
\setbeamercolor*{subitem}{fg=pucdarkgray}

\mode
<all>
