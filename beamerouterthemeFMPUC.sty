\mode<presentation>

% String used between the current page and the total page count.
\def\beamer@puc@pageofpages{/}
\DeclareOptionBeamer{pageofpages}{\def\beamer@puc@pageofpages{#1}}

\ProcessOptionsBeamer

% Fonts
\setbeamerfont{frametitle}{size=\fontsize{20}{24}\bfseries, family={\fontfamily{phv}}}

% Colors.
\setbeamercolor*{page header}{parent=titlelike}

% Lengths
\newlength{\headerheight}
\setlength{\headerheight}{.045\paperheight}

\setbeamerfont{page number}{size=\Large}

% Footer.
\defbeamertemplate*{footline}{puc theme}
{
  \leavevmode%

  
  \hbox
  {
    \vspace{-0.1em}
    \includegraphics[width=\paperwidth]{footer.pdf}%NEW
    \hspace{-\paperwidth}%
    \begin{beamercolorbox}[wd=0.45\paperwidth,leftskip=0.0217\paperwidth,ht=0.0488\paperheight]{pages}\vspace{0.6em}\includegraphics[width=0.15\paperwidth]{logo.pdf} \end{beamercolorbox}%
    \begin{beamercolorbox}[wd=0.52\paperwidth,ht=0.0488\paperheight]{pages}%
    \hfill \vspace{0.8em} {\usebeamerfont{page number}\insertframenumber{} \beamer@puc@pageofpages{} \inserttotalframenumber}  \end{beamercolorbox}
    \begin{beamercolorbox}[wd=0.03\paperwidth,ht=0.0488\paperheight]{pages} \end{beamercolorbox}
  }

}

% Header
\defbeamertemplate*{frametitle}{puc theme}[1][left]
{
  \ifbeamercolorempty[bg]{frametitle}{}{\nointerlineskip}%
  \vbox{}\vskip-.25em%
  \begin{beamercolorbox}[sep=\beamer@leftmargin,wd=\paperwidth]{frametitle}
    \usebeamerfont{frametitle}\usebeamercolor[fg]{frametitle}%
    \vskip-1.2ex
    \if@tempswa\else\csname beamer@fte#1\endcsname\fi%
    \strut\insertframetitle\strut\par%

    \vskip-2.4ex%
    \if@tempswa\else\vskip-\beamer@leftmargin\fi
  \end{beamercolorbox}% 
}

% Frame title continuations, default
\defbeamertemplate*{frametitle continuation}{puc theme}{(\insertcontinuationcount)}




\mode
<all>
